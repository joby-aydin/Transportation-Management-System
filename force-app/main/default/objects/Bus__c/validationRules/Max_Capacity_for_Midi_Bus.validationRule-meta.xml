<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Max_Capacity_for_Midi_Bus</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Bus_Type__c, &quot;Midi Bus&quot;),
    Maximum_Capacity__c != 36 
)</errorConditionFormula>
    <errorDisplayField>Maximum_Capacity__c</errorDisplayField>
    <errorMessage>Maximum capacity should be 36 because you selected Bus Type as Midi Bus.</errorMessage>
</ValidationRule>
